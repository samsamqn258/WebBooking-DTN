@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GOOD BOOKING</title>

    <!-- Favicon -->
    <link rel="apple-touch-icon"
          sizes="180x180"
          href="~/favicon/apple-touch-icon.png" />
    <link rel="icon"
          type="image/png"
          sizes="32x32"
          href="~/favicon/favicon-32x32.png" />
    <link rel="icon"
          type="image/png"
          sizes="16x16"
          href="~/favicon/favicon-16x16.png" />
    <link rel="manifest" href="~/favicon/site.webmanifest" />
    <link rel="mask-icon"
          href="~/favicon/safari-pinned-tab.svg"
          color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/main.css" />

    <!-- Scripts -->
    <script src="~/js/scripts.js"></script>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="top-bar">
        @if (User.Identity.IsAuthenticated)
        {
            string userType = User.FindFirst(ClaimTypes.Role)?.Value;
            string userName = User.Identity.Name;
            if (userType == "1")
            {
                <div class="header__inner">
                    <!-- logo -->
                    <a href="@Url.Action("Index", "HotelOwner")" class="logo">
                        <img src="/icons/logo.svg"
                             alt="GOODBOOKING"
                             class="logo__img" />
                    </a>

                    <!-- Controls -->
                    <div class="controls">

                        <!-- User -->
                        <div class="top-act__user">
                            <div class="user-menu__top">
                                <img src="/img/header-user.jpg"
                                     alt=""
                                     class="user-menu__avatar" />
                                <div>
                                    <p class="user-menu__desc">Xin chào,</p>
                                    <p class="user-menu__name">@userName</p>
                                </div>
                            </div>
                            <!-- DropDown -->
                            <div class="act-dropdown top-act__dropdown">
                                <div class="act-dropdown__inner user-menu">
                                    <ul class="user-menu__list">
                                        <li>
                                            <a href="@Url.Action(" DisplayInfoHotelOwner", "HotelOwner" )" class="user-menu__link">Thông tin cá nhân</a>
                                        </li>

                                        <li>
                                            <a href="/logout-user" class="user-menu__link user-menu__separate">
                                                Đăng Xuất
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="header__inner">
                <!-- logo -->
                <a href="@Url.Action(" Index", "HotelOwner" )" class="logo">
                    <img src="/icons/logo.svg"
                         alt="GOODBOOKING"
                         class="logo__img" />
                </a>

                <!-- Controls -->
                <div class="controls">
                    <a href="@Url.Action("RegisterHotelOwner","AccountHotelOwner" )" class="controls__sign-up btn-custom">Đăng kí</a>
                    <a href="@Url.Action("LoginHotelOwner", "AccountHotelOwner" )" class="controls__sign-in btn-custom">Đăng nhập</a>
                </div>
            </div>
        }
    </div>
    @RenderBody()

    <div class="footer__inner">
        <div class="footer__row">
            <!-- col-1 -->
            <div class="footer__col">
                <a href="@Url.Action("Index", "Hotel" )" class="logo">
                    <img src="/icons/logo.svg"
                         alt="GOODBOOKING"
                         class="logo__img" />
                </a>
                <p class="footer__copyright">
                    Copyrights MiCasa Homes and Properties All rights reserved.

                </p>
                <div class="footer__social-wrap">
                    <a href="#!">
                        <img src="/icons/twitter.svg"
                             alt=""
                             class="footer__social-icon icon" />
                    </a>
                    <a href="#!">
                        <img src="/icons/facebook.svg"
                             alt=""
                             class="footer__social-icon icon" />
                    </a>
                    <a href="#!">
                        <img src="/icons/tiktok.svg"
                             alt=""
                             class="footer__social-icon icon" />
                    </a>
                    <a href="#!">
                        <img src="/icons/youtube.svg"
                             alt=""
                             class="footer__social-icon icon" />
                    </a>
                </div>
            </div>
            <!-- col-2 -->
            <div class="footer__col">
                <h3 class="footer__heading">Company</h3>
                <ul class="footer__list">
                    <li>
                        <a href="#!" class="footer__link">About us</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Blog</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Contact us</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Pricing</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Testimonials</a>
                    </li>
                </ul>
            </div>
            <!-- col-3 -->
            <div class="footer__col">
                <h3 class="footer__heading">Support</h3>
                <ul class="footer__list">
                    <li>
                        <a href="#!" class="footer__link">Help center</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Terms of service</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Legal</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Privacy policy</a>
                    </li>
                    <li>
                        <a href="#!" class="footer__link">Status</a>
                    </li>
                </ul>
            </div>
            <!-- col-4 -->
            <div class="footer__col">
                <h3 class="footer__heading">Stay up to date</h3>
                <div class="form__group footer__form">
                    <div class="form__text-input footer__text-input">
                        <input type="email"
                               name=""
                               id=""
                               placeholder="Your email address"
                               value=""
                               class="form__input footer__input"
                               required />
                        <a href="#!">
                            <img src="/icons/send.svg"
                                 alt=""
                                 class="form__input-icon" />
                        </a>
                    </div>
                    <!--
                    <p class="form__error">
                        Email is not in correct format
                    </p> -->
                </div>
            </div>
        </div>
    </div>

</body>
</html>


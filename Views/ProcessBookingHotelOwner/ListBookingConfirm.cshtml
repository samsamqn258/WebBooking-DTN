@model IEnumerable<WebBooking.Models.Booking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-hotelOwner.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DanhSachPhieuDatChuKhachSan</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            padding-top: 50px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 5px 10px;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .message {
            margin-top: 20px;
            text-align: center;
            font-style: italic;
            color: #6c757d;
        }

        .confirmed-label {
            display: inline-block;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            cursor: default;
            border: 1px solid transparent;
            border-radius: 0.25rem; /* Bo tròn góc */
            color: #155724; /* Màu chữ xanh lá cây */
            background-color: #d4edda; /* Màu nền xanh lá cây nhạt */
            border-color: #c3e6cb; /* Màu viền xanh lá cây */
        }
    </style>
</head>
<body>
    <main class="page-hotel">
        <div class="container">
            @if (Model.Any())
            {
                <h1>Danh sách phiếu đặt phòng</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tên Người Dùng</th>
                            <th>Ngày Nhận Phòng</th>
                            <th>Ngày Trả Phòng</th>
                            <th>Trạng Thái Đặt</th>
                            <th>Trạng Thái Thanh Toán</th>
                            <th>Giá</th>
                            <th>Phòng</th>
                            <th>Xác Nhận</th>
                            <th>Xác Nhận Thanh Toán</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CheckInDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.CheckOutDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookingStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.TotalPriceBooking)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookingID)</td>
                                <td><span class="confirmed-label">Đã xác nhận</span></td>
                                <td>
                                    @if (item.PaymentStatus == true)
                                    {
                                        <span class="confirmed-label">Đã thanh toán</span>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("CashPayment", "PaymentHotelOwner", new {bookingId = @item.BookingID})" class="btn btn-outline-warning">
                                            Chưa thanh toán
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="message">Không có phiếu đặt phòng nào trong khách sạn của bạn.</p>
            }

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "KhachSan")" class="btn btn-primary">Back To List</a>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p class="message">@ViewBag.Message</p>
            }
        </div>
    </main>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>


@model IEnumerable<WebBooking.Models.User>

@{
    Layout = "/Views/Shared/_Layout-guest.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GOOD BOOKING</title>

    <!-- Favicon -->
    <link rel="apple-touch-icon"
          sizes="180x180"
          href="/favicon/apple-touch-icon.png" />
    <link rel="icon"
          type="image/png"
          sizes="32x32"
          href="/favicon/favicon-32x32.png" />
    <link rel="icon"
          type="image/png"
          sizes="16x16"
          href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="mask-icon"
          href="/favicon/safari-pinned-tab.svg"
          color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />



    <!-- Styles -->
    <link rel="stylesheet" href="/css/main.css" />

    <!-- Scripts -->
    <script src="/js/scripts.js"></script>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
</head>
<body>
    @if (ViewBag.NoGuest != null)
    {
        <p>@ViewBag.NoGuest</p>
    }
    else
    {
        @foreach (var user in Model)
        {
            <main class="profile">
                <div class="container">
                    <div class="profile__inner">
                        <div class="row gx-5">
                            <div class="col-3">
                                <aside class="profile__sidebar">
                                    <div class="profile-user">
                                        <img src="/img/header-user.jpg"
                                             alt=""
                                             class="profile-user__avatar" />
                                        <div class="profile-user__name">

                                            @user.UserName
                                        </div>
                                    </div>
                                    <div class="profile-menu">
                                        <h3 class="profile-menu__title">
                                            Subscriptions & plans
                                        </h3>
                                        <ul class="profile-menu__list">
                                            <li>
                                                <a href="#!"
                                                   class="profile-menu__link">
                                                    <div class="profile-menu__icon">
                                                        <img src="/icons/shield.svg"
                                                             alt="" />
                                                    </div>
                                                    Protection plans
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="profile-menu">
                                        <h3 class="profile-menu__title">
                                            Customer Service
                                        </h3>
                                        <ul class="profile-menu__list">
                                            <li>
                                                <a href="#!"
                                                   class="profile-menu__link">
                                                    <div class="profile-menu__icon">
                                                        <img src="/icons/info.svg"
                                                             alt="" />
                                                    </div>
                                                    Help
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#!"
                                                   class="profile-menu__link">
                                                    <div class="profile-menu__icon">
                                                        <img src="/icons/danger.svg"
                                                             alt="" />
                                                    </div>
                                                    Terms of Use
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </aside>
                            </div>
                            <div class="col-9">
                                <div class="account">
                                    <div class="row gy-5">
                                        <div class="col-12">
                                            <h2 class="account__heading">
                                                Thông tin tài khoản
                                            </h2>
                                            <p class="account__desc">
                                                Email và số điện thoại của bạn
                                            </p>
                                            <div class="row row-cols-2 g-4">
                                                <div class="col">
                                                    <article class="account-info">
                                                        <div class="account-info__icon-wrap">
                                                            <img src="/icons/message.svg"
                                                                 alt=""
                                                                 class="account-info__icon" />
                                                        </div>

                                                        <div>
                                                            <div class="account-info__title">
                                                                Địa chỉ Email
                                                            </div>
                                                            <div class="account-info__desc">

                                                                @user.Email
                                                            </div>
                                                        </div>
                                                    </article>
                                                </div>
                                                <div class="col">
                                                    <article class="account-info">
                                                        <div class="account-info__icon-wrap">
                                                            <img src="/icons/phone.svg"
                                                                 alt=""
                                                                 class="account-info__icon" />
                                                        </div>

                                                        <div>
                                                            <div class="account-info__title">
                                                                Số điện thoại
                                                            </div>
                                                            <div class="account-info__desc">

                                                                @user.PhoneNumber
                                                            </div>
                                                        </div>
                                                    </article>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <h2 class="account__heading">
                                                Cập nhật thông tin
                                            </h2>
                                            <p class="account__desc no-margin-bottom">
                                                Vui lòng cập nhật các thông tin của
                                                bạn
                                            </p>
                                            <form action="@Url.Action("SaveGuestInfo", "Guest")" method="post"
                                                  class="form form-confirm">
                                                <div class="form__row">
                                                    <div class="form__group">
                                                        <label for="guestName"
                                                               class="form__label">
                                                            Họ tên
                                                        </label>
                                                        <div class="form__text-input form-confirm__text-input">
                                                            <input type="text"
                                                                   id="guestName"
                                                                   name="guestName"
                                                                   placeholder="Đầy đủ họ tên"
                                                                   class="form__input" />
                                                        </div>
                                                    </div>
                                                    <div class="form__group">
                                                        <label for="phoneNumber"
                                                               class="form__label">Số điện thoại</label>
                                                        <div class="form__text-input form-confirm__text-input">
                                                            <input type="text"
                                                                   id="phoneNumber"
                                                                   name="phoneNumber"
                                                                   placeholder="Số điện thoại"
                                                                   class="form__input" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <button class="btn-custom btn-custom__rounded form-confirm__btn">
                                                    Lưu thông tin
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        }

    }




    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Ẩn đi carousel
            document.getElementById("carouselExampleControls").style.display = "none";

            // Ẩn đi phần tìm kiếm
            document.querySelector(".search").style.display = "none";

            document.querySelector(".header__inner").style.top = "26px";

            document.querySelector(".footer__inner").style.marginTop = "0";

        });
    </script>
</body>
</html>



@model IEnumerable<WebBooking.Models.Payment>

@{
    ViewData["Title"] = "Danh Sách Phiếu Thanh Toán";
    Layout = "~/Views/Shared/_Layout-hotelOwner.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Danh Sách Phiếu Thanh Toán</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            padding-top: 50px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff; /* Blue background for headers */
            color: white;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 5px 10px;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .message {
            margin-top: 20px;
            text-align: center;
            font-style: italic;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <main class="page-room">
        <div class="container py-4">
            <h1>Danh Sách Phiếu Thanh Toán</h1>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-primary" role="alert">
                    @ViewBag.Message
                </div>
            }

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Tổng Tiền</th>
                        <th scope="col">Mã Phiếu Đặt Phòng</th>
                        <th scope="col">Loại Thanh Toán</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="text-success">@Html.DisplayFor(modelItem => item.TotalPayment)</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Booking.BookingID)</td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentType.TypeName)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "HotelOwner")" class="btn btn-primary">Back To List</a>
            </div>
        </div>
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
